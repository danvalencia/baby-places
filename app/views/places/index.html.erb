<div class="col-md-12">
  <div class="container">
    <% @places.each do |place| %>
      <div class="row">
        <div class="col-md-6">
          <img class="map-img" src="https://maps.googleapis.com/maps/api/staticmap?center=<%= place.latitude %>,<%= place.longitude %>&zoom=15&size=400x100&markers=color:green%7C<%= place.latitude %>,<%= place.longitude %>">
        </div>
        <div class="col-md-4">
           <h4><%= place.name %></h4>
           <p><%= place.address %></p>
        </div>
        <div class="col-md-2">
          <span><%= link_to 'show', place, class: 'btn btn-xs btn-info' %></span>
          <span><%= link_to 'edit', edit_place_path(place), class: 'btn btn-xs btn-warning' %></span>
        </div>
      </div>
      <br/>
    <% end %>
  </div>
</div>
